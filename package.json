{
  "name": "digital-hybrid",
  "private": true,
  "description": "Mono repo for all things in the Digital Hybrid project",
  "workspaces": [
    "packages/hybrid-frontend",
    "packages/shared-config/typescript",
    "packages/shared-config/eslint",
    "packages/utils/test"
  ],
  "scripts": {
    "all:format": "yarn workspaces foreach -p -t run format",
    "all:build": "yarn workspaces foreach -p -t run build",
    "all:build:zip": "yarn workspaces foreach run -p -t build:zip",
    "all:test": "yarn workspaces foreach -p -t run test",
    "all:lint": "yarn workspaces foreach -p -t run lint",
    "all:typecheck": "yarn workspaces foreach -p -t run typecheck",
    "all:test:e2e": "yarn workspaces foreach -p -t run test:e2e",
    "clean": "find . -name 'node_modules' -type d -prune -print -exec rm -rf '{}' \\;",
    "frontend": "yarn workspace @tsw/hybrid-frontend",
    "fe": "yarn workspace @tsw/hybrid-frontend"
  }
}

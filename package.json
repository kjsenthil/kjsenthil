{
  "name": "digital-hybrid",
  "private": true,
  "description": "Mono repo for all things in the Digital Hybrid project",
  "workspaces": [
    "packages/hybrid-frontend",
    "packages/shared-config/typescript",
    "packages/shared-config/eslint",
    "packages/utils/test",
    "packages/utils/tracking",
    "packages/function-apps/projections",
    "packages/function-apps/features",
    "packages/testing/selenium",
    "packages/testing/apitest"
  ],
  "scripts": {
    "all:format": "yarn workspaces foreach -ptv run format",
    "all:build": "yarn workspaces foreach -ptv run build",
    "all:build:zip": "yarn workspaces foreach run -ptv build:zip",
    "all:test": "yarn workspaces foreach -ptv run test",
    "all:lint": "yarn workspaces foreach -ptv run lint",
    "all:typecheck": "yarn workspaces foreach -ptv run typecheck",
    "all:test:e2e": "yarn workspaces foreach -ptv run test:e2e",
    "all:fa:install": "yarn workspaces foreach -ptv --include '@tsw/function-app*' run install-only",
    "all:fa:build": "yarn workspaces foreach -ptv --include '@tsw/function-app*' run build",
    "all:fa:build:zip": "yarn workspaces foreach -ptv --include '@tsw/function-app*' run build:zip",
    "all:fa:copy-zip": "yarn workspaces foreach -ptv --include '@tsw/function-app*' run copy-zip",
    "clean": "find . -name 'node_modules' -type d -prune -print -exec rm -rf '{}' \\;",
    "frontend": "yarn workspace @tsw/hybrid-frontend",
    "fe": "yarn workspace @tsw/hybrid-frontend",
    "test:e2e": "yarn workspace @tsw/testing-selenium run test:e2e:ci",
    "test:api:ci": "yarn workspace @tsw/testing-apitest run test:api:ci"
  }
}
